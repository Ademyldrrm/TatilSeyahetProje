@using TatilSeyehatProje.Models.Entities
@model List<Blog>

<div class="right">
    @foreach (var item in Model)
    {
        <div class="bot-left">
            <img src="@item.BlogImage" alt="" />
        </div>
        <div class="left-text">

            <h4>@item.Title</h4>
            <span class="doller">@item.Date.ToString("dd.MM.yyyy")</span>
            <p>@item.Description.Substring(0,80)</p>
            <p><a href="/Blog/BlogDetail/@item.ID"><span class="read">Devamını Oku>></span></a></p>
        </div>
    }

</div>
