@using TatilSeyehatProje.Models.Entities
@model List<Blog>

<div class="padding">
    <h4>Son 10 Blog</h4>
    <ul class="list list-pad">
       @{ int i = 0; }
        @foreach (var item in Model)
        {
            <li class="list-bg"><span>@{i++;} @i.</span><a href="/Blog/BlogDetail/@item.ID">@item.Title</a></li>
        }


    </ul>
    <a href="/Blog/Index" class="link1">Tüm Blogları Göre</a>
</div>
